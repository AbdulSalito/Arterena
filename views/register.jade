extends layout

block content
  p()= msg
  form(role='form', action="/register",method="post")
    .form-group
    input.form-control(type='text', name="username", placeholder='Enter Username')
    .form-group
    input.form-control(type='password', name="password", placeholder='Password')
    .form-group
    input.form-control(type='text', name="email", placeholder='Email Address')
    .form-group
    input.form-control(type='text', name="fullName", placeholder='Enter Full Name')
    button.btn.btn-default(type='submit') Submit
    span= ' | ' 
    a(href='/')
      button.btn.btn-primary(type="button") Cancel